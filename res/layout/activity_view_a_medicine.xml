<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewAMedicine">
    android:id="@+id/view_a_medicine"
    android:orientation="vertical"

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/header"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:checkable="false"
            android:text="Back"
            android:textColor="@color/secondaryText"
            android:textStyle="bold"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/tvViewAMedicineHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/primaryText"
            android:textSize="48sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvDurationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="You've Been Taking THis Medication For..."
        android:textColor="@color/primaryText"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="15 days"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:textStyle="normal"/>


    <TextView
        android:id="@+id/tvDosageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Dosage"
        android:textColor="@color/primaryText"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="15mg per day"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:textStyle="normal"/>
</LinearLayout>